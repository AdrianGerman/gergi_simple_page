---
import { Twitch, Users, TrendingUp, Play } from "@lucide/astro"
---

<section class="mb-12">
  <div
    class="bg-black/40 border border-purple-500/30 backdrop-blur-sm rounded-lg"
  >
    <div class="p-6">
      <!-- Header -->
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center gap-2 text-white text-xl font-semibold">
          <Twitch class="h-6 w-6 text-purple-400" />
          Twitch Stream
        </div>
        <span
          class="inline-block px-3 py-1 text-sm font-medium rounded-full bg-green-500/20 text-green-400 border border-green-500/30"
        >
          ðŸ”´ Live Now
        </span>
      </div>

      <!-- Content -->
      <div class="grid md:grid-cols-2 gap-6">
        <!-- Stream Preview -->
        <div class="relative rounded-lg overflow-hidden">
          <img
            src="/placeholder.svg?height=300&width=500"
            alt="Stream preview"
            class="w-full h-auto object-cover"
          />
          <div
            class="absolute inset-0 bg-black/50 flex items-center justify-center text-center text-white"
          >
            <div>
              <Play class="h-16 w-16 mx-auto mb-2" />
              <p class="text-lg font-semibold">Join the Stream!</p>
            </div>
          </div>
        </div>

        <!-- Details -->
        <div class="space-y-4">
          <div>
            <h4 class="text-xl font-bold text-white mb-2">
              Currently Playing: Cyberpunk 2077
            </h4>
            <p class="text-gray-300">
              Join me for an epic adventure through Night City! We're exploring
              new areas and completing side quests.
            </p>
          </div>
          <div class="flex items-center space-x-4 text-sm text-gray-400">
            <div class="flex items-center">
              <Users class="h-4 w-4 mr-1" />
              1,234 viewers
            </div>
            <div class="flex items-center">
              <TrendingUp class="h-4 w-4 mr-1" />
              Gaming
            </div>
          </div>
          <a
            href="https://twitch.tv"
            target="_blank"
            class="inline-flex items-center justify-center w-full px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-md text-sm font-medium"
          >
            <Twitch class="h-4 w-4 mr-2" />
            Watch on Twitch
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
