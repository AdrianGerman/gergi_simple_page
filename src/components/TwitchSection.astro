---
import { Twitch, Users, TrendingUp, Play } from "@lucide/astro"

import StatusBadge from "../ui/StatusBadge.astro"
import IconText from "../ui/IconText.astro"

const {
  title = "Currently Playing: Cyberpunk 2077",
  description = "Join me for an epic adventure through Night City! We're exploring new areas and completing side quests.",
  image = "https://dummyimage.com/100x100/ffffff/ffffff",
  viewers = "1,234",
  category = "Gaming",
  link = "https://twitch.tv"
} = Astro.props
---

<section class="mb-12">
  <div
    class="bg-black/40 border border-purple-500/30 backdrop-blur-sm rounded-lg"
  >
    <div class="p-6">
      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center gap-2 text-white text-xl font-semibold">
          <Twitch class="h-6 w-6 text-purple-400" />
          Twitch Stream
        </div>
        <StatusBadge text="ðŸ”´ Live Now" color="green" />
      </div>

      <div class="grid md:grid-cols-[minmax(0,320px)_1fr] gap-6 items-start">
        <div class="relative rounded-lg overflow-hidden aspect-video">
          <img
            src={image}
            alt="Stream preview"
            class="w-full h-full object-cover"
          />
          <div
            class="absolute inset-0 bg-black/50 flex items-center justify-center text-center text-white"
          >
            <div>
              <Play class="h-16 w-16 mx-auto mb-2" />
              <p class="text-lg font-semibold">Join the Stream!</p>
            </div>
          </div>
        </div>

        <div class="space-y-4">
          <div>
            <h4 class="text-xl font-bold text-white mb-2">{title}</h4>
            <p class="text-gray-300">{description}</p>
          </div>
          <div class="flex items-center space-x-4">
            <IconText icon={Users} label={`${viewers} viewers`} />
            <IconText icon={TrendingUp} label={category} />
          </div>
          <a
            href={link}
            target="_blank"
            class="inline-flex items-center justify-center px-4 py-2 bg-fuchsia-600 hover:bg-fuchsia-700 text-white rounded-md text-sm font-medium"
          >
            <Twitch class="h-4 w-4 mr-2" />
            Watch on Twitch
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
