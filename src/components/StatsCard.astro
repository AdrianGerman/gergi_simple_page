---
import { User, Youtube, Eye, Heart } from "@lucide/astro"
---

<div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
  <div
    class="bg-black/40 border border-purple-500/30 backdrop-blur-sm p-4 text-center rounded-lg"
  >
    <User class="h-8 w-8 text-purple-400 mx-auto mb-2" />
    <div class="text-2xl font-bold text-white">125K</div>
    <div class="text-sm text-gray-400">Followers</div>
  </div>

  <div
    class="bg-black/40 border border-red-500/30 backdrop-blur-sm p-4 text-center rounded-lg"
  >
    <Youtube class="h-8 w-8 text-red-400 mx-auto mb-2" />
    <div class="text-2xl font-bold text-white">50K</div>
    <div class="text-sm text-gray-400">Subscribers</div>
  </div>

  <div
    class="bg-black/40 border border-green-500/30 backdrop-blur-sm p-4 text-center rounded-lg"
  >
    <Eye class="h-8 w-8 text-green-400 mx-auto mb-2" />
    <div class="text-2xl font-bold text-white">2.5M</div>
    <div class="text-sm text-gray-400">Views</div>
  </div>

  <div
    class="bg-black/40 border border-pink-500/30 backdrop-blur-sm p-4 text-center rounded-lg"
  >
    <Heart class="h-8 w-8 text-pink-400 mx-auto mb-2" />
    <div class="text-2xl font-bold text-white">89K</div>
    <div class="text-sm text-gray-400">Likes</div>
  </div>
</div>
