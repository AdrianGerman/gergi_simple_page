---
import { Youtube, Play } from "@lucide/astro"
---

<section class="mb-12">
  <div class="bg-black/40 border border-red-500/30 backdrop-blur-sm rounded-lg">
    <div class="p-6">
      <h3 class="text-white text-xl font-semibold flex items-center gap-2 mb-6">
        <Youtube class="h-6 w-6 text-red-400" />
        Latest YouTube Videos
      </h3>

      <div class="space-y-8">
        <!-- Video 1 -->
        <div>
          <div class="relative group cursor-pointer rounded-lg overflow-hidden">
            <img
              src="https://dummyimage.com/300x200/ffffff/ffffff"
              alt="Video thumbnail"
              class="w-full object-cover"
            />
            <div
              class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity"
            >
              <Play class="h-12 w-12 text-white" />
            </div>
            <div
              class="absolute bottom-2 right-2 bg-black/80 text-white text-xs px-2 py-1 rounded"
            >
              12:34
            </div>
          </div>
          <div class="mt-3">
            <h4 class="text-white font-semibold">
              Epic Gaming Moments Compilation
            </h4>
            <p class="text-gray-400 text-sm">125K views • 2 days ago</p>
          </div>
        </div>

        <!-- Video 2 -->
        <div>
          <div class="relative group cursor-pointer rounded-lg overflow-hidden">
            <img
              src="https://dummyimage.com/300x200/ffffff/ffffff"
              alt="Video thumbnail"
              class="w-full object-cover"
            />
            <div
              class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity"
            >
              <Play class="h-12 w-12 text-white" />
            </div>
            <div
              class="absolute bottom-2 right-2 bg-black/80 text-white text-xs px-2 py-1 rounded"
            >
              8:45
            </div>
          </div>
          <div class="mt-3">
            <h4 class="text-white font-semibold">
              Tech Review: Latest Gaming Setup
            </h4>
            <p class="text-gray-400 text-sm">89K views • 5 days ago</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
