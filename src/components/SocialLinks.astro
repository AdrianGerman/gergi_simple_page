---
import {
  Youtube,
  Twitch,
  Instagram,
  Twitter,
  Music,
  Heart
} from "@lucide/astro"
import GitHub from "./icons/GitHub.astro"
import Discord from "./icons/Discord.astro"
import X from "./icons/X.astro"
---

<section class="mb-12">
  <h3 class="text-3xl font-bold text-white mb-6 text-center">
    Connect With Me
  </h3>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <a
      href="https://youtube.com"
      target="_blank"
      class="h-16 bg-red-600 hover:bg-red-700 text-white flex items-center justify-center gap-2 rounded-lg"
    >
      <Youtube class="h-6 w-6" />
      YouTube
    </a>
    <a
      href="https://twitch.tv"
      target="_blank"
      class="h-16 bg-purple-600 hover:bg-purple-700 text-white flex items-center justify-center gap-2 rounded-lg"
    >
      <Twitch class="h-6 w-6" />
      Twitch
    </a>
    <a
      href="https://instagram.com"
      target="_blank"
      class="h-16 bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white flex items-center justify-center gap-2 rounded-lg"
    >
      <Instagram class="h-6 w-6" />
      Instagram
    </a>
    <a
      href="https://tiktok.com"
      target="_blank"
      class="h-16 bg-black hover:bg-gray-900 text-white flex items-center justify-center gap-2 border border-white/20 rounded-lg"
    >
      <Music class="h-6 w-6" />
      TikTok
    </a>
    <a
      href="https://twitter.com"
      target="_blank"
      class="h-16 bg-blue-500 hover:bg-blue-600 text-white flex items-center justify-center gap-2 rounded-lg"
    >
      <X class="h-6 w-6" />
      Twitter
    </a>
    <a
      href="https://discord.com"
      target="_blank"
      class="h-16 bg-blue-700 hover:bg-blue-800 text-white flex items-center justify-center gap-2 rounded-lg"
    >
      <Discord class="h-6 w-6" />
      Discord
    </a>
    <a
      href="https://patreon.com"
      target="_blank"
      class="h-16 bg-gradient-to-r from-orange-400 to-pink-400 hover:from-orange-500 hover:to-pink-500 text-white flex items-center justify-center gap-2 rounded-lg"
    >
      <Heart class="h-6 w-6" />
      Patreon
    </a>
    <a
      href="https://github.com"
      target="_blank"
      class="h-16 bg-gray-800 hover:bg-gray-700 text-white flex items-center justify-center gap-2 border border-white/20 rounded-lg"
    >
      <GitHub class="h-6 w-6" />
      GitHub
    </a>
  </div>
</section>
