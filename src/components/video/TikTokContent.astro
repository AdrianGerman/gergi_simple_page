---
import { Music, Play, Heart, ExternalLink } from "@lucide/astro"
import VideoCard from "./VideoCard.astro"

const tiktoks = [
  {
    thumbnail: "https://dummyimage.com/250x150/ffffff/ffffff",
    icon: Play,
    layout: "portrait",
    likes: "45K"
  },
  {
    thumbnail: "https://dummyimage.com/250x150/ffffff/ffffff",
    icon: Play,
    layout: "portrait",
    likes: "32K"
  }
]
---

<section class="mb-12">
  <div
    class="bg-black/40 border border-pink-500/30 backdrop-blur-sm rounded-lg"
  >
    <div class="p-6">
      <h3 class="text-white text-xl font-semibold flex items-center gap-2 mb-6">
        <Music class="h-6 w-6 text-pink-400" />
        TikTok Highlights
      </h3>

      <div class="grid grid-cols-2 gap-4 mb-6">
        {
          tiktoks.map((video) => (
            <VideoCard {...video} icon={Play} layout="portrait" />
          ))
        }
      </div>

      <div class="text-center">
        <a
          href="#"
          class="inline-flex items-center justify-center px-4 py-2 border border-pink-500/50 text-pink-400 hover:bg-pink-500/10 rounded-md text-sm font-medium"
        >
          View All TikToks
          <ExternalLink class="h-4 w-4 ml-2" />
        </a>
      </div>
    </div>
  </div>
</section>
