---
const {
  thumbnail,
  title,
  views,
  date,
  duration,
  icon: Icon,
  layout = "landscape", // or "portrait"
  likes
} = Astro.props
---

<div
  class={`relative group cursor-pointer rounded-lg overflow-hidden ${layout === "portrait" ? "aspect-[9/16]" : ""}`}
>
  <img src={thumbnail} alt={title} class="object-cover w-full h-full" />
  <div
    class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity"
  >
    <Icon
      class={`${layout === "portrait" ? "h-8 w-8" : "h-12 w-12"} text-white`}
    />
  </div>

  {
    duration && (
      <div class="absolute bottom-2 right-2 bg-black/80 text-white text-xs px-2 py-1 rounded">
        {duration}
      </div>
    )
  }

  {
    likes && (
      <div class="absolute bottom-2 left-2 text-white text-xs flex items-center gap-1">
        <Icon class="h-4 w-4 inline" />
        {likes}
      </div>
    )
  }
</div>

{
  title && (
    <div class="mt-3">
      <h4 class="text-white font-semibold">{title}</h4>
      <p class="text-gray-400 text-sm">
        {views} â€¢ {date}
      </p>
    </div>
  )
}
