---
import Header from "../components/Header.astro"
import HeroSection from "../components/HeroSection.astro"
import SocialLinks from "../components/SocialLinks.astro"
import StatsCard from "../components/StatsCard.astro"
import ContentSections from "../components/ContentSections.astro"
import TwitchSection from "../components/TwitchSection.astro"
import RecentActivity from "../components/RecentActivity.astro"
import Footer from "../components/Footer.astro"
import Layout from "../layouts/Layout.astro"
---

<Layout>
  <div
    class="min-h-screen bg-gradient-to-br from-purple-900 via-blue-900 to-indigo-900"
  >
    <Header />
    <main class="container mx-auto px-4 py-8">
      <HeroSection />
      <StatsCard />
      <SocialLinks />
      <ContentSections />
      <TwitchSection />
      <RecentActivity />
      <Footer />
    </main>
  </div>
</Layout>
